<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration SYSTEM "configuration.dtd">

<configuration>
    <appender name="CONSOLE" class="com.edu.nbu.info.my.logger.core.appender.ConsoleAppender">
    </appender>

    <mylogger name="com.edu.nbu.info.my.logger.core.log" class ="com.edu.nbu.info.my.logger.core.log.MyLogger" >
        <appender-ref ref="CONSOLE"/>
    </mylogger>

    <root level="TRACE">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>